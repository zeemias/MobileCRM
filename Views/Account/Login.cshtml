@model MobileCRM.Models.LoginModel
@{Html.EnableClientValidation();}
@{Html.EnableUnobtrusiveJavaScript();}
@{
    ViewBag.Title = "ДельтаКредит - Вход в систему";
}

<div class="wrapper bg">
    <div class="card log-center">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <a href="https://www.deltacredit.ru" class="simple-text">
                        <img src="@Url.Content("~/Content/img/logo.png")" width="100%">
                    </a>
                </div>
            </div>
            <form method="post" action="/Account/Login" class="log-form">
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <h3>Вход</h3>
                </div>
                    @Html.ValidationSummary(true)
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Логин</label>
                            @Html.TextBoxFor(t => t.Login, new { @class = "form-control border-input" })
                            @Html.ValidationMessageFor(t => t.Login)
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Пароль</label>
                            @Html.PasswordFor(t => t.Password, new { @class = "form-control border-input" })
                            @Html.ValidationMessageFor(t => t.Password)
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <div class="text-center">
                                <button type="submit" class="btn btn-danger btn-fill btn-wd">Войти</button>
                            </div>
                        </div>
                    </div>
            </form>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="text-center">
                            <a href="Register">Регистрация</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       </div>

