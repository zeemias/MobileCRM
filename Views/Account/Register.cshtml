
@{
    ViewBag.Title = "ДельтаКредит - Регистрация нового пользователя";
}

<div class="wrapper bg">
    <div class="card reg-center">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <a href="https://www.deltacredit.ru" class="simple-text">
                        <img src="@Url.Content("~/Content/img/logo.png")" width="100%">
                    </a>
                </div>
            </div>
            <form method="post" action="/Account/Register" class="log-form">
                @Html.AntiForgeryToken()
                <div class="text-center">
                    <h3>Регистрация</h3>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Логин</label>
                        <input type="text" class="form-control border-input" name="Login" required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Фамилия</label>
                        <input type="text" class="form-control border-input" name="Surname" required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Имя</label>
                        <input type="text" class="form-control border-input" name="Name" required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Отчество</label>
                        <input type="text" class="form-control border-input" name="Patronymic">
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Пароль</label>
                        <input type="password" class="form-control border-input" name="Password" required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <label>Подтверждение пароля</label>
                        <input type="password" class="form-control border-input" name="ConfirmPassword" required>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger btn-fill btn-wd">Создать аккаунт</button>
                        </div>
                    </div>
                </div>
           </form>
            <div class="col-md-12">
                <div class="form-group">
                    <div class="text-center">
                        <a href="Login">Войти в аккаунт</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




