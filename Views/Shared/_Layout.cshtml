<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>@ViewBag.Title</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />

    <link href="@Url.Content("~/Content/css/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/animate.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/paper-dashboard.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/css/demo.css")" rel="stylesheet" />

    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css'>
    <link href="@Url.Content("~/Content/css/themify-icons.css")" rel="stylesheet">

</head>
<body>
     @RenderBody()
</body>
    <script src="@Url.Content("~/Scripts/jquery-3.2.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/bootstrap-checkbox-radio.js")"></script>
    <script src="@Url.Content("~/Content/js/chartist.min.js")"></script>
    <script src="@Url.Content("~/Content/js/bootstrap-notify.js")"></script>
    <script src="@Url.Content("~/Content/js/paper-dashboard.js")"></script>
    <script src="@Url.Content("~/Content/js/demo.js")"></script>
    <script type="text/javascript">
        $('#submit').on('click', function (e) {
            e.preventDefault();
            var files = document.getElementById('uploadFile').files;
            if (files.length > 0) {
                if (window.FormData !== undefined) {
                    var data = new FormData();
                    for (var x = 0; x < files.length; x++) {
                        data.append("file" + x, files[x]);
                    }

                    $.ajax({
                        type: "POST",
                        url: '@Url.Action("UploadPhoto", "Home")',
                    contentType: false,
                    processData: false,
                    data: data,
                    success: function (result) {
                                alert("Фото загружено!");
                                $('#photo').attr('src', result.slice(1));
                                $('#PhotoProfile').val(result);
                            },
                    error: function (xhr, status, p3) {
                                alert(xhr.responseText);
                            }
                        });
            } else {
                alert("Браузер не поддерживает загрузку файлов HTML5!");
            }
        }
        });

        $('#save').on('click', function (e) { $('#btnform').click() });

        $('#call').on('click', function (e) {
            $('#story').val("Звонок клиенту");
            $('#AddStoryForm').submit();
            $('#story').val();
        });
    </script>
}
</html>
