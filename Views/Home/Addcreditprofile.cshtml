
@{
    ViewBag.Title = "ДельтаКредит - Добавление нового кредитного дела";
}


<div class="wrapper">
    <div class="sidebar" data-background-color="white" data-active-color="danger">
        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="https://www.deltacredit.ru" class="simple-text">
                    <img src="@Url.Content("~/Content/img/logo.png")" width="90%">
                </a>
            </div>
            <ul class="nav">
                <li class="active">
                    <a href="/Home/Addcreditprofile">
                        <i class="ti-plus"></i>
                        <p>Кредитное дело</p>
                    </a>
                </li>
                <li>
                    <a href="/Home/Creditlist">
                        <i class="ti-view-list-alt"></i>
                        <p>Кредитные дела</p>
                    </a>
                </li>
                <li>
                    <a href="/Home/Creditprofile/1">
                        <i class="ti-user"></i>
                        <p>Карта клиента</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                    <a class="navbar-brand" href="#">Добавление кредитного дела</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="#">
                                <i class="ti-user"></i>
                                <p>Выйти</p>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>


        <div class="content">
            <form method="post">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3 col-md-4">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title"></h4>
                                </div>
                                <div class="content">
                                    <div class="form-group">
                                        <img src="@Url.Content("~/Content/img/avatar.png")" width="100%">
                                        <div class="text-center">
                                            <button class="btn btn-info btn-fill btn-wd photo">Загрузить фотографию</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-7 col-md-6">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Новое кредитное дело</h4>
                                </div>
                                <div class="content">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Фамилия</label>
                                                <input type="text" class="form-control border-input" placeholder="Фамилия" name="Surname">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label>Имя</label>
                                                <input type="text" class="form-control border-input" placeholder="Имя" name="Name">
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <div class="form-group">
                                                <label>Отчество</label>
                                                <input type="text" class="form-control border-input" placeholder="Отчество" name="Patronymic">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label>Дата рождения</label>
                                                <input type="date" class="form-control border-input" placeholder="@DateTime.Now.ToString("d")" name="Birthday">
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <div class="form-group">
                                                <label>Источник обращения</label>
                                                <select class="form-control border-input" name="Source">
                                                    <option value="Агентство недвижимости">Агентство недвижимости</option>
                                                    <option value="Частный риелтор">Частный риелтор</option>
                                                    <option value="Наружная реклама">Наружная реклама</option>
                                                    <option value="Банк партнер">Банк партнер</option>
                                                    <option value="Интернет">Интернет</option>
                                                    <option value="Личный кабинет">Личный кабинет</option>
                                                    <option value="РосБанк">РосБанк</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5">
                                            <div class="form-group">
                                                <label>Телефон</label>
                                                <input type="tel" class="form-control border-input" placeholder="Телефон" name="PhoneNumber">
                                            </div>
                                        </div>
                                        <div class="col-md-7">
                                            <div class="form-group">
                                                <label>Почта</label>
                                                <input type="email" class="form-control border-input" placeholder="Почта" name="Email">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group">
                                                <label>Место работы</label>
                                                <input type="text" class="form-control border-input" placeholder="Место работы" name="Work">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-info btn-fill btn-wd">Добавить</button>
                                    </div>
                                    <div class="clearfix"></div>
                                    </form>
                            </div>
                        </div>
                    </div>
