@model MobileCRM.Models.IndexViewModel
@using MobileCRM.Helpers
@{
    ViewBag.Title = "ДельтаКредит - Список кредитных дел";
}

<div class="wrapper">
    <div class="sidebar" data-background-color="white" data-active-color="danger">
        <div class="sidebar-wrapper">
            <div class="logo">
                <a href="https://www.deltacredit.ru" class="simple-text">
                    <img src="@Url.Content("~/Content/img/logo.png")" width="90%">
                </a>
            </div>
            <ul class="nav">
                <li>
                    <a href="/Home/Addcreditprofile">
                        <i class="ti-plus"></i>
                        <p>Кредитное дело</p>
                    </a>
                </li>
                <li class="active">
                    <a href="/Home/Creditlist">
                        <i class="ti-view-list-alt"></i>
                        <p>Кредитные дела</p>
                    </a>
                </li>
                <li>
                    <a href="/Home/Creditprofile/1">
                        <i class="ti-user"></i>
                        <p>Карта клиента</p>
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <div class="main-panel">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar bar1"></span>
                        <span class="icon-bar bar2"></span>
                        <span class="icon-bar bar3"></span>
                    </button>
                    <a class="navbar-brand" href="#">Кредитные дела</a>
                </div>
                <div class="collapse navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li>
                            <a href="/Account/Logoff">
                                <i class="ti-user"></i>
                                <p>Выйти</p>
                            </a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>


        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="header">
                                <h4 class="title">Список кредитных дел</h4>
                                <p class="category"></p>
                            </div>
                            <div class="content table-responsive table-full-width">
                                <table class="table table-striped">
                                    <thead>
                                    <th>ID</th>
                                    <th>ФИО</th>
                                    <th>Дата рождения</th>
                                    <th>Телефон</th>
                                    <th>Почта</th>
                                    <th></th>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.Credits)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@item.Surname @item.Name @item.Patronymic</td>
                                                <td>@item.Birthday.ToString("d")</td>
                                                <td>+@item.PhoneNumber</td>
                                                <td>@item.Email</td>
                                                <td><a href="/Home/Creditprofile/@item.Id" style="btn btn-info btn-fill btn-wd">Открыть</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                                <div class="btn-group">
                                    @Html.PageLinks(Model.PageInfo, x => Url.Action("Creditlist", new { page = x }))
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
     </div>
</div>
